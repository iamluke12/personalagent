#!/usr/bin/env python3
"""
PersonalAgent - Main Entry Point
Intelligent Calendar Management and Task Automation System
"""

import os
import sys
import subprocess

def main():
    """Main entry point for PersonalAgent"""
    # Get the project root directory
    project_root = os.path.dirname(os.path.dirname(os.path.abspath(__file__)))
    
    # Default to running the core system
    core_script = os.path.join(project_root, "src", "core", "getLatest.sh")
    
    if os.path.exists(core_script):
        # Execute the shell script
        os.chdir(project_root)
        subprocess.run([core_script] + sys.argv[1:])
    else:
        print("‚ùå Core system not found. Please check installation.")

if __name__ == "__main__":
    main()
